<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ssb_home_info"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <TextView
            android:id="@+id/ssb_home_info_head"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:background="@drawable/ssb_bg_oval"
            android:gravity="center"
            android:text=""
            android:textColor="@color/app_theme_color"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/ssb_home_info_like_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/app_theme_color"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:gravity="right"/>
        <TextView
            android:id="@+id/ssb_home_info_like_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8==D"
            android:textSize="16sp"
            android:textColor="@color/app_theme_color"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            />
        <TextView
            android:id="@+id/ssb_home_info_like_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:gravity="right"
            android:textColor="@color/app_theme_color"
            android:textSize="13sp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/ssb_home_info_head"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ssb_home_info_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:text=""
                android:textColor="@color/app_theme_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/ssb_home_info_description"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:text=""
                android:textColor="@color/app_theme_color"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_alignParentBottom="true"
            android:background="@color/app_theme_color" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ssb_home_function_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>
</LinearLayout>
